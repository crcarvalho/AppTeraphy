<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadastroActivity"
        android:orientation="vertical">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputNome" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/textView" android:layout_marginRight="8dp" android:hint="Nome"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputSobrenome" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputNome"
            app:layout_constraintStart_toStartOf="@+id/inputNome" app:layout_constraintEnd_toEndOf="@+id/inputNome"
            app:layout_constraintHorizontal_bias="0.0" android:hint="Sobrenome"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/inputEmail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputSobrenome"
            app:layout_constraintStart_toStartOf="@+id/inputSobrenome"
            app:layout_constraintEnd_toEndOf="@+id/inputSobrenome" android:hint="E-mail"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/inputTelefone" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputEmail"
            app:layout_constraintStart_toStartOf="@+id/inputEmail" app:layout_constraintEnd_toEndOf="@+id/inputEmail"
            android:hint="Telefone"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputCPF" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputTelefone"
            app:layout_constraintStart_toStartOf="@+id/inputTelefone"
            app:layout_constraintEnd_toEndOf="@+id/inputTelefone" android:hint="CPF"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputRG" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputCPF"
            app:layout_constraintStart_toStartOf="@+id/inputCPF" app:layout_constraintEnd_toEndOf="@+id/inputCPF"
            android:hint="RG"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/inputDtNascimento" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputRG"
            app:layout_constraintStart_toStartOf="@+id/inputRG" app:layout_constraintEnd_toEndOf="@+id/inputRG"
            android:hint="Data de nascimento"/>
    <Button
            android:text="CADASTRAR"
            style="@style/button_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCadastrar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputDtNascimento"
            app:layout_constraintStart_toStartOf="@+id/inputDtNascimento"
            app:layout_constraintEnd_toEndOf="@+id/inputDtNascimento"/>
    <TextView
            android:text="Preencha seus dados cadastrais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>